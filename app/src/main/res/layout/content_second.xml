<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.test.SecondActivity"
    tools:showIn="@layout/activity_second">
    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/reshow_rencten_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重近站" />
    <Button
        android:id="@+id/run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="显示最近"/>
        <!--<Button
            android:id="@+id/return_school"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="回归"/>
            -->
        <Button
            android:id="@+id/check_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改定位" />

    </LinearLayout>
    <!-- <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/line2"
        >


    </LinearLayout>
     -->

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">
    <TextView
        android:id="@+id/show_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示定位"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp" />

        <!--<Button
            android:id="@+id/get_wait"
            android:layout_height="40dp"
            android:layout_width="122dp"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"
            android:text="订车" />
            -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/line1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp">
        <Button
            android:id="@+id/show_end_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="终点定位" />
        <Button
            android:id="@+id/show_line_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示路线" />
        <Button
            android:id="@+id/put"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示车辆"/>
    </LinearLayout>

</RelativeLayout>
